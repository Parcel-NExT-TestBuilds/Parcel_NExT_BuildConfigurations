<Window x:Class="Parcel.Neo.PopupWindows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About This Software" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="LightGray"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="LightGray"/>
        </Style>
    </Window.Resources>
    <Grid Background="#1E1E1E">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="8">
            <DockPanel HorizontalAlignment="Center">
                <Image DockPanel.Dock="Left" Source="/Icon.png" Width="64" Margin="12"/>
                <Label DockPanel.Dock="Top" Content="PV1 Neo" FontSize="22" HorizontalAlignment="Center" Margin="0" Padding="0"/>
                <Label DockPanel.Dock="Top" Content="Methodox Technologies, Inc." HorizontalAlignment="Center" Margin="0" Padding="0" FontSize="8"/>
                <Label DockPanel.Dock="Top" Content="Version: 0.5.0 Build v2024-08-07" HorizontalAlignment="Center" Margin="0" Padding="0" FontSize="8"/>
                <Label DockPanel.Dock="Top" Content="A Parcel NExT Front-end (Graph Editor)." HorizontalAlignment="Center" Margin="0" Padding="0"  FontSize="8"/>
                <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" TextAlignment="Center" FontSize="8">
                    Written by
                    <Hyperlink NavigateUri="https://www.linkedin.com/in/chaojianzhang/" RequestNavigate="Hyperlink_RequestNavigate">
                        Charles Zhang
                    </Hyperlink>
                </TextBlock>
                <TextBlock DockPanel.Dock="Top" TextWrapping="WrapWithOverflow"  MaxWidth="320" HorizontalAlignment="Center" TextAlignment="Center">
                    This program is designed to make programming accessible. Parcel is free to use for everyone.
                    <LineBreak/>
                    You can use it for personal, professional, educational and commercial purposes, including to modify and redistribute this software (with restrictions). See license for details.
                </TextBlock>
                    
                <Label DockPanel.Dock="Top" Content="Contacts" HorizontalAlignment="Center" Margin="0" Padding="0,4,0,0" FontSize="8" FontStyle="Italic" FontWeight="Bold"/>
                <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" TextAlignment="Center" FontSize="8">
                    General Inquiries: 
                    <Hyperlink NavigateUri="mailto:contact@methodox.io" RequestNavigate="Hyperlink_RequestNavigate">
                        contact@methodox.io
                    </Hyperlink>
                </TextBlock>
                <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" TextAlignment="Center" FontSize="8">
                    Bugs, Feature Requests &amp; Suggestions: 
                    <Hyperlink NavigateUri="mailto:feedback@methodox.io" RequestNavigate="Hyperlink_RequestNavigate">
                        feedback@methodox.io
                    </Hyperlink>
                </TextBlock>
                <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" TextAlignment="Center" FontSize="8">
                    Business opportunities:
                    <Hyperlink NavigateUri="mailto:sales@methodox.io" RequestNavigate="Hyperlink_RequestNavigate">
                        sales@methodox.io
                    </Hyperlink>
                </TextBlock>
            </DockPanel>
            <StackPanel Orientation="Vertical" Margin="0, 4">
                <TextBlock Foreground="LightBlue" HorizontalAlignment="Center">
                    Website: 
                    <Hyperlink NavigateUri="https://methodox.io" RequestNavigate="Hyperlink_RequestNavigate">
                        Official Methodox Page
                    </Hyperlink>
                </TextBlock>
                <TextBlock Foreground="LightBlue" HorizontalAlignment="Center">
                    Source Code: 
                    <Hyperlink NavigateUri="https://github.com/Parcel-NExT/Parcel_NExT" RequestNavigate="Hyperlink_RequestNavigate">
                        Github Repository
                    </Hyperlink>
                </TextBlock>
                <TextBlock Foreground="LightBlue" HorizontalAlignment="Center">
                    License: N/A
                </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0, 4, 0, 0">
                <Label Content="❤️ Made with love, dedication and craftsmanship." HorizontalAlignment="Center" Margin="0" Padding="0"  FontSize="6"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
